@{
    ViewData["Title"] = "Error";
}

<h1 class="text-danger">Error.</h1>
<h2 class="text-danger">An error occurred while processing your request.</h2>

@if (!string.IsNullOrEmpty(ViewData["RequestId"]?.ToString()))
{
    <p>
        <strong>Request ID:</strong> <code>@ViewData["RequestId"]</code>
    </p>
}

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage?.ToString()))
{
    <div class="alert alert-danger">
        <p>@ViewBag.ErrorMessage</p>
    </div>
}

<p>Please try again or contact support if the problem persists.</p>
<a asp-action="Index" class="btn btn-primary">Return to Home</a>

