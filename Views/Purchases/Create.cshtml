@model VirtualEventTicketing.Models.PurchaseViewModel

@{
    ViewData["Title"] = "Purchase Tickets";
}

<h1>Purchase Tickets</h1>

<hr />

<div class="row">
    <div class="col-md-8">
        <!-- Event Information -->
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Event Information</h5>
            </div>
            <div class="card-body">
                <h4>@Model.Event.Title</h4>
                <p class="mb-1"><strong>Category:</strong> @Model.Event.Category.Name</p>
                <p class="mb-1"><strong>Date & Time:</strong> @Model.Event.Date.ToString("MMMM dd, yyyy 'at' HH:mm")</p>
                <p class="mb-1"><strong>Ticket Price:</strong> $@Model.Event.TicketPrice.ToString("F2")</p>
                <p class="mb-0"><strong>Available Tickets:</strong> @Model.Event.AvailableTickets</p>
            </div>
        </div>

        <!-- Purchase Form -->
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EventId" />
            
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Purchase Details</h5>
                </div>
                <div class="card-body">
                    <div class="form-group mb-3">
                        <label asp-for="Quantity" class="control-label"></label>
                        <input asp-for="Quantity" class="form-control" type="number" min="1" max="@Model.Event.AvailableTickets" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                        <small class="form-text text-muted">Maximum @Model.Event.AvailableTickets tickets available</small>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="GuestName" class="control-label"></label>
                        <input asp-for="GuestName" class="form-control" />
                        <span asp-validation-for="GuestName" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="GuestEmail" class="control-label"></label>
                        <input asp-for="GuestEmail" class="form-control" type="email" />
                        <span asp-validation-for="GuestEmail" class="text-danger"></span>
                    </div>

                    <div class="alert alert-info">
                        <strong>Total Cost:</strong> $<span id="totalCost">@Model.Event.TicketPrice.ToString("F2")</span>
                        <br />
                        <small>Price will update based on quantity selected.</small>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Complete Purchase" class="btn btn-success btn-lg" />
                        <a asp-controller="Events" asp-action="Details" asp-route-id="@Model.EventId" class="btn btn-secondary">Cancel</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const quantityInput = document.querySelector('#Quantity');
            const totalCostSpan = document.querySelector('#totalCost');
            const ticketPrice = @Model.Event.TicketPrice;

            quantityInput.addEventListener('input', function() {
                const quantity = parseInt(this.value) || 0;
                const total = (ticketPrice * quantity).toFixed(2);
                totalCostSpan.textContent = total;
            });
        });
    </script>
}

