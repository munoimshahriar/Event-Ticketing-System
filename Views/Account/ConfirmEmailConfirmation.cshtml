@{
    ViewData["Title"] = "Email Confirmed";
    var message = TempData["Message"] as string ?? "Your email has been confirmed successfully.";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <h2 class="mb-4">Email Confirmed</h2>
        <div class="alert alert-success">
            <h4>Success!</h4>
            <p>@message</p>
            <p class="mb-0">You can now log in to your account.</p>
        </div>
        <div class="mt-4">
            <a asp-action="Login" class="btn btn-primary">Login</a>
            <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Return to Home</a>
        </div>
    </div>
</div>
