@{
    ViewData["Title"] = "Account Locked";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <h2 class="mb-4">Account Locked</h2>
        <div class="alert alert-danger">
            <p>This account has been locked out due to too many failed login attempts.</p>
            <p class="mb-0">Please try again later or contact support if you need immediate assistance.</p>
        </div>
        <a asp-action="Login" class="btn btn-primary">Try Again</a>
    </div>
</div>

