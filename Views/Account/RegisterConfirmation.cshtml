@{
    ViewData["Title"] = "Registration Confirmation";
    var email = ViewData["Email"] as string ?? "your email";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <h2 class="mb-4">Registration Successful</h2>
        <div class="alert alert-info">
            <h4>Please check your email</h4>
            <p>We've sent a confirmation email to <strong>@email</strong>.</p>
            <p class="mb-0">Please click the confirmation link in the email to activate your account.</p>
        </div>
        <div class="mt-3">
            <p>Didn't receive the email?</p>
            <ul>
                <li>Check your spam/junk folder</li>
                <li>Make sure the email address is correct</li>
                <li>Wait a few minutes and check again</li>
            </ul>
        </div>
        <div class="mt-4">
            <a asp-action="Login" class="btn btn-primary">Go to Login</a>
            <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Return to Home</a>
        </div>
    </div>
</div>

