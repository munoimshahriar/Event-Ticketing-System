@model VirtualEventTicketing.Models.Event

@{
    ViewData["Title"] = "Event Details";
}

<h1>Event Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Model.Date.ToString("MMMM dd, yyyy 'at' HH:mm")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TicketPrice)
        </dt>
        <dd class="col-sm-10">
            $@Html.DisplayFor(model => model.TicketPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AvailableTickets)
        </dt>
        <dd class="col-sm-10">
            @if (Model.AvailableTickets == 0)
            {
                <span class="badge bg-danger">Sold Out</span>
            }
            else if (Model.AvailableTickets < 5)
            {
                <span class="badge bg-warning">@Model.AvailableTickets tickets left - Low Availability!</span>
            }
            else
            {
                <span class="badge bg-success">@Model.AvailableTickets tickets available</span>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    @if (Model.AvailableTickets > 0)
    {
        <a asp-controller="Purchases" asp-action="Create" asp-route-eventId="@Model.Id" class="btn btn-success">Buy Tickets</a>
    }
</div>

