@model VirtualEventTicketing.Models.Event

@{
    ViewData["Title"] = "Event Details";
}

<h1>Event Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Model.Date.ToString("MMMM dd, yyyy 'at' HH:mm")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TicketPrice)
        </dt>
        <dd class="col-sm-10">
            $@Html.DisplayFor(model => model.TicketPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AvailableTickets)
        </dt>
        <dd class="col-sm-10">
            @if (Model.AvailableTickets == 0)
            {
                <span class="badge bg-danger">Sold Out</span>
            }
            else if (Model.AvailableTickets < 5)
            {
                <span class="badge bg-warning">@Model.AvailableTickets tickets left - Low Availability!</span>
            }
            else
            {
                <span class="badge bg-success">@Model.AvailableTickets tickets available</span>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Organizer") || User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    }
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    @if (Model.AvailableTickets > 0 && User.Identity?.IsAuthenticated == true)
    {
        <div class="mt-3">
            <div class="input-group" style="max-width: 300px;">
                <input type="number" id="ticket-quantity" class="form-control" value="1" min="1" max="@Model.AvailableTickets" />
                <button class="btn btn-success" id="add-to-cart-btn" data-event-id="@Model.Id">Add to Cart</button>
            </div>
            @if (Model.AvailableTickets <= 5)
            {
                <p class="text-warning mt-2"><small>⚠️ Only @Model.AvailableTickets tickets left!</small></p>
            }
        </div>
    }
    else if (Model.AvailableTickets > 0)
    {
        <a asp-controller="Account" asp-action="Login" class="btn btn-success">Login to Purchase</a>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#add-to-cart-btn').on('click', function () {
                var eventId = $(this).data('event-id');
                var quantity = parseInt($('#ticket-quantity').val());
                
                $.ajax({
                    url: '@Url.Action("AddToCart", "Cart")',
                    type: 'POST',
                    data: { eventId: eventId, quantity: quantity },
                    success: function (response) {
                        if (response.success) {
                            updateCartBadge(response.cartCount);
                            showAddToCartSuccess();
                            if (response.lowStock) {
                                alert('⚠️ Low stock warning: Only a few tickets left!');
                            }
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function () {
                        alert('Failed to add to cart. Please try again.');
                    }
                });
            });
        });
    </script>
}

